<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:id="@+id/lnlayoutmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/imgfood"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:background="@drawable/logoworkout"
            android:textColor="#f00"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/layouttimedown"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/border"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:focusable="true">
            <ImageButton
                android:id="@+id/imgSettingFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/clock"
                android:layout_margin="5dp"

                />
            <TextView
                android:id="@+id/txttimedown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo mới"
                android:textSize="20dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textStyle="bold|normal"
                />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewWODe"
            android:layout_below="@+id/imgfood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_marginTop="20dp"
            app:cardElevation="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="15dp"

            android:background="@drawable/custom_edittext">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <VideoView
                    android:id="@+id/videovWO"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/detail"
                    android:textSize="20dp"
                    android:textStyle="normal|bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TableLayout
            android:id="@+id/tbl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:id="@+id/tblrow1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center">
                <Button
                    android:id="@+id/btnidbatdauvadone"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Bắt đầu"
                    android:textStyle="bold|normal"
                    android:layout_marginRight="20dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnthoat"
                    android:textStyle="bold|normal"
                    android:text="Thoát"/>

            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>
