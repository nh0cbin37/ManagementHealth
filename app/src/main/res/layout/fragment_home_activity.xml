<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <LinearLayout
        android:id="@+id/progrlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_centerHorizontal="true">

        <ProgressBar
            android:id="@+id/progrCalo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:indeterminateOnly="false"
            android:progress="20"
            android:progressDrawable="@drawable/circle" />


    </LinearLayout>

    <TextView
        android:id="@+id/txtCaloHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/progrlayout"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="85dp"
        android:text="300 calo"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="normal|bold" />
    <LinearLayout
        android:id="@+id/LinearDam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/txtDam"
            android:layout_marginTop="30dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đạm"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="normal|bold"/>
        <TextView
            android:id="@+id/txtCountDam"
            android:layout_below="@+id/txtDam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:text="15/30"/>
        <ProgressBar
            android:id="@+id/progrDam"
            android:layout_toLeftOf="@+id/progr"
            android:progressDrawable="@drawable/circle"
            android:indeterminateOnly="false"
            android:progress="50"
            android:layout_below="@+id/txtCountDam"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
    </LinearLayout>
    />
    <LinearLayout
        android:id="@+id/linearBeo"
        android:layout_below="@+id/LinearDam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/txtBeo"
            android:layout_marginTop="30dp"
            android:textStyle="normal|bold"
            android:layout_below="@+id/progrDam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Béo"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtCOuntBeo"
            android:layout_below="@+id/txtDam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"

            android:textColor="@color/black"
            android:text="15/30"/>


        <ProgressBar
            android:id="@+id/progrBeo"
            android:layout_toLeftOf="@+id/progr"
            android:progressDrawable="@drawable/circle"
            android:indeterminateOnly="false"
            android:progress="50"
            android:layout_below="@+id/txtBeo"
            android:layout_width="70dp"
            android:layout_height="70dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="25dp"
        android:id="@+id/LinearBot_Duong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/progrlayout"
        android:gravity="center">

        <TextView

            android:id="@+id/txtBot_Sugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold"
            android:layout_marginTop="30dp"
            android:text="Đường"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txtCountBot_Duong"
            android:layout_below="@+id/txtDam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"

            android:textColor="@color/black"
            android:text="15/30"/>

        <ProgressBar
            android:id="@+id/progrBot_Sugar"
            android:progressDrawable="@drawable/circle"
            android:indeterminateOnly="false"
            android:progress="50"
            android:layout_below="@+id/txtBot_Sugar"

            android:layout_width="70dp"
            android:layout_height="70dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/progrlayout"
        android:layout_below="@+id/LinearBot_Duong"
        android:gravity="center">
        <TextView
            android:id="@+id/txtXo"
            android:layout_marginTop="30dp"
            android:textStyle="normal|bold"
            android:layout_toRightOf="@+id/progr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xơ"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtCountXo"
            android:layout_below="@+id/txtDam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"

            android:textColor="@color/black"
            android:text="15/30"/>
        <ProgressBar
            android:id="@+id/progrXo"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/progr"
            android:progressDrawable="@drawable/circle"
            android:indeterminateOnly="false"
            android:progress="50"
            android:layout_below="@+id/txtBeo"

            android:layout_width="70dp"
            android:layout_height="70dp"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearwater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearBeo"
        android:orientation="horizontal"
        android:gravity="right">
        <TextView
            android:id="@+id/txtSolitnuoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="100/2000"
            android:textSize="25dp"
            android:textStyle="normal|bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txtMl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="ml"
            android:textSize="25dp"
            android:textStyle="normal|bold"
            android:textColor="@color/black"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearwater"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgcupwater1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cup_notwater"/>
        <ImageView
            android:id="@+id/imgcupwater2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cup_notwater"/>
        <ImageView
            android:id="@+id/imgcupwater3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cup_notwater"/>
        <ImageView
            android:id="@+id/imgcupwater4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cup_notwater"/>
        <ImageView
            android:id="@+id/imgcupwater5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cup_notwater"/>
        <ImageView
            android:id="@+id/imgcupwater6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cup_notwater"/>
        <ImageView
            android:id="@+id/imgcupwater7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cup_notwater"/>

        <ImageView
            android:id="@+id/imgcupwater8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cup_notwater"/>

    </LinearLayout>




</RelativeLayout>